{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "webextensions": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "globals": {
    "chrome": "readonly",
    "browser": "readonly"
  },
  "plugins": ["react", "react-hooks", "jsx-a11y"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    // === ERRORS (Will break build) ===
    "no-undef": "error",
    "no-unused-vars": ["error", {
      "vars": "all",
      "args": "after-used",
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_",
      "ignoreRestSiblings": true
    }],
    "no-console": ["error", { 
      "allow": ["warn", "error", "info"]
    }],
    "no-debugger": "error",
    "no-async-promise-executor": "error",

    // === WARNINGS (Won't break build) ===
    "complexity": ["warn", 15],
    "max-lines-per-function": ["warn", {
      "max": 75,
      "skipBlankLines": true,
      "skipComments": true
    }],
    "max-params": ["warn", 5],
    "max-depth": ["warn", 4],
    "require-await": "warn",
    "prefer-promise-reject-errors": "warn",
    "no-implied-eval": "warn",
    "no-new-func": "warn",

    // === REACT SPECIFIC ===
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",

    // === CHROME EXTENSION SPECIFIC ===
    "no-restricted-imports": ["warn", {
      "patterns": [{
        "group": ["**/db/index.js"],
        "message": "Import specific db modules instead of index"
      }]
    }]
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.spec.js", "**/test/**/*.js"],
      "env": {
        "jest": true
      },
      "rules": {
        "max-lines-per-function": "off",
        "complexity": "off",
        "no-console": "off"
      }
    },
    {
      "files": ["**/db/**/*.js"],
      "rules": {
        "complexity": ["warn", 20],
        "max-lines-per-function": ["warn", 100]
      }
    },
    {
      "files": ["**/services/**/*.js"],
      "rules": {
        "max-lines-per-function": ["warn", 100],
        "complexity": ["warn", 18]
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}